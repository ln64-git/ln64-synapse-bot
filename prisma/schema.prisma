datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Guild {
  id       String    @id
  name     String
  ownerId  String
  channels Channel[]
  members  Member[]
}

model Channel {
  id       String    @id
  name     String
  type     String
  position Int
  guildId  String
  guild    Guild     @relation(fields: [guildId], references: [id])
  messages Message[]
}

model Member {
  id            String    @id
  username      String
  discriminator String
  nickname      String?
  joinedAt      DateTime
  guildId       String
  guild         Guild     @relation(fields: [guildId], references: [id])
  messages      Message[]
}

model Message {
  id              String    @id
  content         String
  timestamp       DateTime
  editedTimestamp DateTime?
  tts             Boolean
  mentionEveryone Boolean
  channelId       String
  channel         Channel   @relation(fields: [channelId], references: [id])
  authorId        String
  author          Member    @relation(fields: [authorId], references: [id])
}
